<Window x:Class="UserAppWindow.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserAppWindow.UI"
        mc:Ignorable="d"
        Title="User Window" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Welcome to your Smart Parking App!</TextBlock>
        <Button Grid.Row="1" VerticalAlignment="Top" FontSize="25" Height="50" Width="200" Click="Registration_Button">Registration</Button>
        <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" FontSize="25" Height="50" Width="200" Click="Authorization_Button">Authorization</Button>
    </Grid>
</Window>
